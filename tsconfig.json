{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["shared/*"]
    },
    "types": ["cypress", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/**/*.d.ts",
    "shared/**/*.ts",
    "runner/**/*.ts"
  ]
}
